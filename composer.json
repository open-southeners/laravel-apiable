{
    "name": "open-southeners/laravel-apiable",
    "description": "Integrate JSON:API resources on your Laravel API project.",
    "license": "MIT",
    "keywords": [
        "open-southeners",
        "apiable",
        "json-api",
        "laravel",
        "laravel-package",
        "request-query",
        "request-search",
        "request-params-filtering"
    ],
    "authors": [
        {
            "name": "Ruben Robles",
            "email": "me@d8vjork.com"
        }
    ],
    "homepage": "https://docs.opensoutheners.com/laravel-apiable/",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0 || ^12.0",
        "open-southeners/extended-php": "~1.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.1",
        "laravel/scout": "^10.0",
        "orchestra/testbench": "^9.0 || ^10.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "suggest": {
        "hammerstone/fast-paginate": "Improves jsonApiPaginate method performance (SQL database query pagination)",
        "laravel/scout": "Integrate search with JsonApiResponse using its search method"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "OpenSoutheners\\LaravelApiable\\": "src"
        },
        "files": [
            "./helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSoutheners\\LaravelApiable\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "OpenSoutheners\\LaravelApiable\\ServiceProvider"
            ]
        }
    }
}
